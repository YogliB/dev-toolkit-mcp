{
	// Shared TypeScript configuration for all workspace packages
	// Each package extends this with runtime-specific settings (Node.js/Bun vs Browser)
	//
	// Root contains only:
	// - Strict type-checking flags (applies to all packages)
	// - Module interoperability settings (ESM, JSON imports)
	// - Code quality flags (no fallthrough, indexed access checks)
	//
	// Packages must define their own:
	// - lib: Runtime libraries (ESNext for Node.js, DOM for browser)
	// - target: Compilation target (ESNext, ES2022, etc)
	// - module: Module system specifics
	// - paths: Package-specific path aliases
	// - include/exclude: Package-specific file patterns

	"compilerOptions": {
		// Strict type-checking (universal)
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"forceConsistentCasingInFileNames": true,

		// Module interoperability (universal)
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"verbatimModuleSyntax": true,

		// Build settings (universal)
		"noEmit": true,

		// Code quality flags (configurable per package)
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,

		// Allow JavaScript (packages can override)
		"allowJs": true,

		// Module resolution (packages can override for specific bundlers)
		"moduleResolution": "bundler"
	},

	// Workspace-wide exclusions
	"exclude": [
		"**/node_modules",
		"**/dist",
		"**/coverage",
		"**/.svelte-kit",
		"**/.bun-test"
	]
}
