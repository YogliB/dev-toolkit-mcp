{
	// Extends both root config and SvelteKit-generated config
	// TypeScript 5.0+ supports array extends - later configs override earlier ones
	// Order: root (shared) → .svelte-kit (SvelteKit paths/includes) → dashboard overrides
	"extends": ["../../tsconfig.json", "./.svelte-kit/tsconfig.json"],
	"compilerOptions": {
		// SvelteKit-specific settings
		"rewriteRelativeImportExtensions": true,
		"checkJs": true,
		"sourceMap": true
	}
	// Note: lib, target, module, paths, include, exclude inherited from .svelte-kit/tsconfig.json
	// Note: strict flags, interop settings inherited from root tsconfig.json
	// Path aliases ($lib, $app/*) are handled by svelte.config.js and .svelte-kit/tsconfig.json
}
